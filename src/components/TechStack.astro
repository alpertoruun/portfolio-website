---

<section id="tech" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1.5 rounded-full bg-accent-primary/10 text-accent-primary text-sm font-medium mb-4">
        Technical Arsenal
      </span>
      <h2 class="text-3xl sm:text-4xl font-bold text-surface-950 mb-4">
        Tech Stack & Expertise
      </h2>
      <p class="text-surface-700 max-w-2xl mx-auto">
        Building robust, scalable systems with modern cloud-native technologies
      </p>
    </div>

    <!-- Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {techCategories.map((category, idx) => (
        <div 
          class={`bento-card p-6 opacity-0 animate-scale-in ${idx === 0 ? 'md:col-span-2 lg:col-span-1' : ''}`}
          style={`animation-delay: ${idx * 0.1}s`}
        >
          <div class="flex items-center gap-3 mb-4">
            <span class="text-2xl">{category.icon}</span>
            <h3 class="text-lg font-semibold text-surface-900">{category.title}</h3>
          </div>
          <div class="flex flex-wrap gap-2">
            {category.items.map((item) => (
              <span 
                class={`px-3 py-1.5 rounded-lg text-sm font-medium bg-${item.color}/10 text-${item.color} border border-${item.color}/20 hover:bg-${item.color}/20 transition-colors cursor-default`}
                style={`
                  background-color: var(--color-${item.color}, rgba(99, 102, 241, 0.1));
                  color: var(--color-${item.color}-text, currentColor);
                `}
              >
                {item.name}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Highlight Badge -->
    <div class="mt-8 flex justify-center">
      <div class="inline-flex items-center gap-4 px-6 py-4 rounded-2xl bg-gradient-to-r from-kubernetes/10 via-surface-300 to-argocd/10 border border-surface-400/50">
        <div class="flex items-center gap-2">
          <span class="text-kubernetes font-semibold">‚éà Kubernetes</span>
          <span class="text-surface-600">+</span>
          <span class="text-argocd font-semibold">ArgoCD</span>
          <span class="text-surface-600">+</span>
          <span class="text-backstage font-semibold">Backstage</span>
        </div>
        <span class="text-surface-600">=</span>
        <span class="text-accent-primary font-bold">Modern Platform Engineering</span>
      </div>
    </div>
  </div>
</section>

