---
// YouTube Channel Highlights Section
// You can add your video IDs here to feature them

const featuredVideos = [
  {
    id: "FcoE_TCuA4k", // Replace with your actual video ID from YouTube URL
    title: "Sertifika Neyi Sağlar? AWS Solutions Architect Sertifikası ve Önemli AWS Servisleri",
  },
  {
    id: "8unhIU7uj3A", // Replace with your actual video ID
    title: "Junior Devops Engineer Olur Mu?", 
  },
];

const channelStats = {
  channelUrl: "https://www.youtube.com/@alpertorunn",
  channelName: "@alpertorunn",
};
---

<section id="youtube" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-red-500/10 text-red-500 text-sm font-medium mb-4">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        YouTube Channel
      </span>
      <h2 class="text-3xl sm:text-4xl font-bold text-surface-950 mb-4">
        Video Content
      </h2>
      <p class="text-surface-700 max-w-2xl mx-auto">
        Sharing knowledge about DevOps, Platform Engineering, and Cloud technologies
      </p>
    </div>

    <!-- Channel Card -->
    <div class="max-w-4xl mx-auto mb-12">
      <a 
        href={channelStats.channelUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="group block"
      >
        <div class="bento-card p-6 sm:p-8 flex flex-col sm:flex-row items-center gap-6 hover:border-red-500/30 transition-all">
          <!-- Channel Icon -->
          <div class="w-20 h-20 sm:w-24 sm:h-24 rounded-2xl bg-gradient-to-br from-red-500 to-red-600 flex items-center justify-center shadow-lg shadow-red-500/25">
            <svg class="w-10 h-10 sm:w-12 sm:h-12 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </div>

          <!-- Channel Info -->
          <div class="flex-1 text-center sm:text-left">
            <h3 class="text-2xl font-bold text-surface-950 group-hover:text-red-500 transition-colors">
              Alper Torun
            </h3>
            <p class="text-surface-600 mb-3">{channelStats.channelName}</p>
            <p class="text-surface-700">
              DevOps tutorials, Kubernetes deep-dives, and Platform Engineering content
            </p>
          </div>

          <!-- Subscribe Button -->
          <div class="flex-shrink-0">
            <div class="inline-flex items-center gap-2 px-6 py-3 bg-red-500 hover:bg-red-600 text-white font-semibold rounded-xl transition-all shadow-lg shadow-red-500/25 group-hover:shadow-red-500/40">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
              Subscribe
            </div>
          </div>
        </div>
      </a>
    </div>

    <!-- Featured Videos Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredVideos.map((video, idx) => (
        <div 
          class="bento-card overflow-hidden opacity-0 animate-scale-in"
          style={`animation-delay: ${idx * 0.1}s`}
        >
          <!-- Video Thumbnail/Embed -->
          <div class="aspect-video bg-surface-300 relative group">
            <iframe
              src={`https://www.youtube.com/embed/${video.id}`}
              title={video.title}
              class="w-full h-full"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              loading="lazy"
            ></iframe>
          </div>
          
          <!-- Video Info -->
          <div class="p-4">
            <h3 class="font-semibold text-surface-950 line-clamp-2">
              {video.title}
            </h3>
            {video.description && (
              <p class="text-sm text-surface-600 line-clamp-2 mt-1">
                {video.description}
              </p>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- View All CTA -->
    <div class="mt-12 text-center">
      <a 
        href={channelStats.channelUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-surface-300 hover:bg-red-500/10 border border-surface-400 hover:border-red-500/30 text-surface-900 hover:text-red-500 font-semibold transition-all hover:-translate-y-0.5"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        View All Videos
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
