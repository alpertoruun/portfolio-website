        Featured Projects
      </h2>
      <p class="text-surface-700 max-w-2xl mx-auto">
        Personal and professional projects showcasing platform engineering expertise
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      {projects.map((project, idx) => (
        <div 
          class="bento-card p-6 opacity-0 animate-scale-in flex flex-col h-full"
          style={`animation-delay: ${idx * 0.1}s`}
        >
          {/* Header */}
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-4">
              <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-accent-primary/20 to-accent-secondary/20 flex items-center justify-center text-3xl">
                {project.image}
              </div>
              <div>
                <h3 class="text-lg font-bold text-surface-950">{project.title}</h3>
                <p class="text-sm text-accent-primary font-medium">{project.subtitle}</p>
              </div>
            </div>
            <div class="flex items-center gap-2">
              {project.status === 'professional' && (
                <span class="px-2 py-1 rounded-full bg-accent-secondary/10 text-accent-secondary text-xs font-semibold">
                  Professional
                </span>
              )}
              {project.githubUrl && (
                <a 
                  href={project.githubUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-2 rounded-lg bg-surface-300 hover:bg-github/20 border border-surface-400/50 hover:border-github/50 transition-all group"
                  aria-label="View on GitHub"
