---
// Certifications Section - Highlight professional certifications with verified badge styling

const certifications = [
  {
    name: "Certified Kubernetes Administrator",
    shortName: "CKA",
    issuer: "The Linux Foundation",
    date: "October 2025",
    credlyUrl: "https://www.credly.com/badges/546d92e0-f4b8-46fd-91cd-4c01fded5f73/public_url",
    icon: "⎈",
    color: "kubernetes",
    description: "Demonstrated expertise in Kubernetes cluster administration, troubleshooting, networking, and security.",
    featured: true,
  },
  {
    name: "AWS Solutions Architect",
    shortName: "SAA",
    issuer: "Amazon Web Services",
    date: "May 2024",
    credlyUrl: "https://www.credly.com/badges/16fd9c98-14f6-43e1-b8a8-886ca3132686/linked_in_profile",
    icon: "☁️",
    color: "aws",
    description: "Proven ability to design distributed systems on AWS, optimize costs, and implement secure architectures.",
    featured: true,
  }
];
---

<section id="certifications" class="py-20 px-4 sm:px-6 lg:px-8 bg-surface-200/50">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1.5 rounded-full bg-accent-success/10 text-accent-success text-sm font-medium mb-4">
        Verified Credentials
      </span>
      <h2 class="text-3xl sm:text-4xl font-bold text-surface-950 mb-4">
        Professional Certifications
      </h2>
      <p class="text-surface-700 max-w-2xl mx-auto">
        Industry-recognized credentials validating cloud and container expertise
      </p>
    </div>

    <!-- Certifications Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 max-w-4xl mx-auto">
      {certifications.map((cert, idx) => (
        <a 
          href={cert.credlyUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="group block opacity-0 animate-slide-up"
          style={`animation-delay: ${idx * 0.15}s`}
        >
          <div class={`bento-card p-6 h-full relative overflow-hidden ${cert.featured ? 'ring-2 ring-' + cert.color + '/30' : ''}`}>
            {/* Verified Badge */}
            <div class="absolute top-4 right-4">
              <div class="flex items-center gap-1.5 px-3 py-1 rounded-full bg-accent-success/10 border border-accent-success/20">
                <svg class="w-4 h-4 text-accent-success" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span class="text-xs font-semibold text-accent-success">Verified</span>
              </div>
            </div>

            {/* Content */}
            <div class="flex items-start gap-4">
              {/* Icon */}
              <div class={`flex-shrink-0 w-16 h-16 rounded-2xl bg-${cert.color}/10 border border-${cert.color}/20 flex items-center justify-center text-3xl`}
                style={`background-color: ${cert.color === 'kubernetes' ? 'rgba(50, 108, 229, 0.1)' : 'rgba(255, 153, 0, 0.1)'};
                        border-color: ${cert.color === 'kubernetes' ? 'rgba(50, 108, 229, 0.2)' : 'rgba(255, 153, 0, 0.2)'};`}
              >
                {cert.icon}
              </div>

              <div class="flex-1 min-w-0">
                {/* Badge */}
                <div class="inline-flex items-center gap-2 mb-2">
                  <span 
                    class="text-2xl font-bold"
                    style={`color: ${cert.color === 'kubernetes' ? '#326ce5' : '#ff9900'}`}
                  >
                    {cert.shortName}
                  </span>
                </div>

                {/* Title */}
                <h3 class="text-lg font-semibold text-surface-950 mb-1 group-hover:text-accent-primary transition-colors">
                  {cert.name}
                </h3>

                {/* Issuer & Date */}
                <div class="flex items-center gap-2 text-sm text-surface-600 mb-3">
                  <span>{cert.issuer}</span>
                  <span>•</span>
                  <span>{cert.date}</span>
                </div>

                {/* Description */}
                <p class="text-sm text-surface-700 leading-relaxed">
                  {cert.description}
                </p>
              </div>
            </div>

            {/* View Certificate CTA */}
            <div class="mt-4 pt-4 border-t border-surface-400/30 flex items-center justify-between">
              <span class="text-sm text-surface-600">View on Credly</span>
              <svg class="w-5 h-5 text-surface-600 group-hover:text-accent-primary group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </div>

            {/* Background Glow */}
            <div 
              class="absolute -bottom-20 -right-20 w-40 h-40 rounded-full blur-3xl opacity-20 group-hover:opacity-30 transition-opacity"
              style={`background-color: ${cert.color === 'kubernetes' ? '#326ce5' : '#ff9900'}`}
            ></div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
